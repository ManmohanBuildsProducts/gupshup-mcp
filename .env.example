# SMS Enterprise credentials
GUPSHUP_USER_ID=your-sms-user-id
GUPSHUP_PASSWORD=your-sms-password

# WhatsApp Enterprise credentials
GUPSHUP_WHATSAPP_USER_ID=your-whatsapp-user-id
GUPSHUP_WHATSAPP_PASSWORD=your-whatsapp-password

# Optional endpoints (these are the defaults)
GUPSHUP_API_ENDPOINT=https://enterprise.smsgupshup.com/GatewayAPI/rest
GUPSHUP_WHATSAPP_API_ENDPOINT=https://media.smsgupshup.com/GatewayAPI/rest

# Logging + reliability
GUPSHUP_LOG_LEVEL=off
GUPSHUP_REDACT_LOGS=true
GUPSHUP_MAX_RETRIES=3
GUPSHUP_RETRY_BASE_MS=300
GUPSHUP_RETRY_MAX_MS=5000
GUPSHUP_RETRY_JITTER_MS=150

# Optional IDs for India DLT-compliant SMS sends
BADHO_SMS_PRINCIPAL_ENTITY_ID=
BADHO_SMS_DLT_TEMPLATE_ID=
